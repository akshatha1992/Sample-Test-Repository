pipeline {
    agent any

    stages {
        stage ('Clone') {
            steps {
                git url: 'https://github.com/akshatha1992/Sample-Test-Repository.git'
            }
        }
        stage ('Exec Go run') {
            steps {
                rtGoRun (
                    path: "golang-example/hello",
                    resolverId: "GO_RESOLVER",
                    args: "build"
                )
            }
        }

        stage ('Exec Go publish') {
            steps {
                rtGoPublish (
                    path: "golang-example/hello",
                    deployerId: "GO_DEPLOYER",
                    version: "1.0.0"
                )
            }
        }

        
    }
}

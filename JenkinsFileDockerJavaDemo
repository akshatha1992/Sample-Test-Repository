def var1 = "hello-world-image"
pipeline {
environment {
    dockerImage = ''
  }

 
    agent any

    stages {
        stage ('Get iamgename') {
            steps {
                echo "$var1"
            }
        }
        
        stage ('Docker Image Build') 
            {
            steps 
                {
                script {
                       dockerImage = docker.build "hello-world-image" + ":$BUILD_NUMBER"
                       }

                }
            }
            
       stage ('Execute Test In Container') 
            {
            steps 
                {
                script {
                       dockerImage.run
                       }

                }
            }
        
       
        
    }
}

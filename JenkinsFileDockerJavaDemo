def var1 = "hello-world-image-" + "$BUILD_NUMBER"
pipeline {
 
    agent any

    stages {
        stage ('Get iamgename') {
            steps {
                echo "$var1"
            }
        }
        
        stage ('Docker Image Build') {
            steps {
                bat label: '', script: 'docker build -f Dockerfile -t \"$var1\" .'
            }
        }
        
       
        
    }
}
